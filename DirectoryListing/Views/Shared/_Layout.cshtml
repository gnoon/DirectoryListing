<!DOCTYPE html>
<html>
    <head>
        <title>@System.Configuration.ConfigurationManager.AppSettings["title"]</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">	<!-- Force Latest IE rendering engine -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" /> <!-- Mobile Specific Metas -->
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
        <meta http-equiv="pragma" content="no-cache" />
        <!-- Bootstrap Core CSS -->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/bootstrap/css/bootstrap.min.css")" />
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/bootstrap/css/bootstrap-select.css")" />
        <!-- Alertify -->
        <link href="@Url.Content("~/Scripts/alertify/alertify.core.css")" rel="Stylesheet" type="text/css" />
        <link href="@Url.Content("~/Scripts/alertify/alertify.bootstrap.css")" rel="Stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/alertify/alertify.min.js")" type="text/javascript"></script>
        <!-- Custom Fonts -->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/bootstrap-admin/fonts/css/font-awesome.min.css")"/>
        <!-- jQuery Core JavaScript -->
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery/jquery-1.10.2.js")"></script>
        <!-- Bootstrap Core JavaScript -->
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap/bootstrap.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap/bootstrap-select.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap-validator/validator.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/bootbox/bootbox.min.js")"></script>        <!-- Render Section -->
        @if (IsSectionDefined("Style"))
        {@RenderSection("Style", true);
        }
        @if (IsSectionDefined("Script"))
        {@RenderSection("Script", true);
        }
    </head>
    <body>
        <header>
            <img src="@Url.Content("~/_static/logo-short.png")" />&nbsp;
            <h2 style="display:inline;">@Html.Raw(System.Configuration.ConfigurationManager.AppSettings["caption"])</h2>
            @if (IsSectionDefined("Header"))
            {@RenderSection("Header", true);
            }
        </header>
        <nav>
            @RenderBody()
        </nav>
    </body>
</html>
